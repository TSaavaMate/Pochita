<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69ACC1"
    tools:context=".sellerfrags.settingfrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/sel_back"
            android:layout_alignStart="@+id/setting_text"
            android:src="@drawable/back_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="settings"
            android:id="@+id/setting_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imageonsettings"
                android:layout_width="120dp"
                android:layout_gravity="center"
                android:layout_height="120dp"
                android:src="@drawable/real_person_ic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_back_settings"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:padding="15dp">
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/ongoing_relative"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/time"
                        android:layout_marginStart="20dp"
                        android:layout_height="40dp"
                        android:src="@drawable/time"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ongoin orders"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_below="@id/time"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/disputes_relative"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/coupon"
                        android:layout_marginStart="20dp"
                        android:layout_height="40dp"
                        android:src="@drawable/dispute_ic"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="disputes"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_below="@id/coupon"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/seller_shipped_relative"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/shipped"
                        android:layout_marginStart="20dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shipped_icon_settings"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="shipped items"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_below="@id/shipped"
                        />
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_back_settings"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:padding="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/seller_payment_relative"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/payment_iC"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wallet_ic"
                        android:background="@drawable/paymentback"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="payment method"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/payment_iC" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/seller_adress_relative"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/adress_icon"
                        android:layout_height="wrap_content"
                        android:src="@drawable/adress_ic"
                        android:background="@drawable/adress_back"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="location"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/adress_icon"
                        />
                </RelativeLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_back_settings"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Orders"
                    android:textColor="@color/white"
                    android:textSize="30sp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rated_prod_relative"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order1"
                        android:src="@drawable/reviewed_ic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rated products"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/order1"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/sel_discarded_items_relative"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order2"
                        android:src="@drawable/discarded_ic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="discarded orders"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/order2"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/sel_unpaid_items_relative"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order3"
                        android:src="@drawable/unpaid_ic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="unseccesful orders"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/order3"
                        />
                </RelativeLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_back_settings"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:padding="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:textColor="@color/white"
                    android:textSize="30sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/help_pass_relative"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pass_text"
                        android:src="@drawable/change_pass"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="change password"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/pass_text"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/sell_help_center_relative"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/help"
                        android:src="@drawable/help_ic"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="help center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/help"
                        />
                </RelativeLayout>


            </LinearLayout>


            <Button
                android:id="@+id/button_signout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:background="@drawable/forbutton"
                android:text="sign out" />
        </LinearLayout>
    </ScrollView>



</FrameLayout>