<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundS"
    android:orientation="vertical"
    tools:context=".Mainpage.AccountFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back"
        android:layout_alignStart="@+id/setting_text"
        android:src="@drawable/back_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="settings"
            android:id="@+id/setting_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imageonsettings"
                android:layout_width="120dp"
                android:layout_gravity="center"
                android:layout_height="120dp"
                android:src="@drawable/real_person_ic"/>
            <TextView
                android:id="@+id/currentusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Name,Surname"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_back_settings"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            android:padding="15dp">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_marginStart="15dp"
                android:id="@+id/wish_list_relative"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/payment_iC1"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/wish_list_2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="wish list"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/payment_iC1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_marginStart="20dp"
                android:id="@+id/coupons_relative"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/coupon"
                    android:layout_marginStart="20dp"
                    android:layout_height="40dp"
                    android:src="@drawable/coupon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="coupons"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/coupon"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_marginStart="20dp"
                android:id="@+id/shipped_relative"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/shipped"
                    android:layout_marginStart="20dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shipped_icon_settings"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="shipped items"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/shipped"
                    />
            </RelativeLayout>


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_back_settings"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:padding="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/payment_relative"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/payment_iC"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wallet_ic"
                    android:background="@drawable/paymentback"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="payment method"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/payment_iC"
                    />
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/adress_relative"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/adress_icon"
                        android:layout_height="wrap_content"
                        android:src="@drawable/adress_ic"
                        android:background="@drawable/adress_back"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="adress"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/adress_icon"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/coupon_relative"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/coupon_icon"
                        android:src="@drawable/payment_icon"
                        android:background="@drawable/coupon_back"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="coupon center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/coupon_icon"
                        />
                </RelativeLayout>



            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_back_settings"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/reviewed_prod_relative"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order1"
                    android:src="@drawable/reviewed_ic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="reviewed products"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/order1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/discarded_items_relative"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order2"
                    android:src="@drawable/discarded_ic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="discarded orders"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/order2"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"

                android:id="@+id/unpaid_items_relative"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order3"
                    android:src="@drawable/unpaid_ic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="unseccesful orders"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/order3"
                    />
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_back_settings"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/help_center_relative"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/help"
                    android:src="@drawable/help_ic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="help center"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/help"
                    />
            </RelativeLayout>

        </LinearLayout>


            <Button
                android:id="@+id/buttonsignout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:background="@drawable/forbutton"
                android:text="sign out" />
        </LinearLayout>
    </ScrollView>



</FrameLayout>